<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tetris.djj.machine_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号：" />

                <TextView
                    android:id="@+id/tv_widget_cost_manager_material_shop_num"
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WCD015H" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格号：" />

                <TextView
                    android:id="@+id/tv_widget_cost_manager_material_spec_num"
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WYJY-42" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标数量：" />

                <TextView
                    android:id="@+id/tv_widget_cost_manager_material_target_num"
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15000米" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_widget_cost_manager_material_cost_name"
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="材料成本：" />

                <TextView
                    android:id="@+id/tv_widget_cost_manager_material_cost"
                    style="@style/widget_actual_monitor_process_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2元/米" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart_widget_cost_manager_material"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>