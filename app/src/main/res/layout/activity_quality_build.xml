<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tetris.djj.machine_m"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.tetris.djj.machine_m.widget.TitleText
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        app:title_text="质量回溯"
        app:show_left_icon="true"
        app:title_target="QualityBackStrackingActivity"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/quality_build_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="工单号 :"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_quality_build_work_sheet"
            style="@style/quality_build_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="12345"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            style="@style/quality_build_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="工艺流程 :"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>