<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/main_top_sys">

        <TextView
            style="@style/main_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备忘录" />
        <ImageButton
            android:id="@+id/i_btn_main_textbook_add"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@null"
            android:src="@drawable/selector_main_textbook_top"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_main_textbook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"></ListView>

</LinearLayout>