<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_login_phone"
                android:layout_marginLeft="5dp"
                android:maxLength="11"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:background="@mipmap/ic_login_user" />

            <TextView
                android:id="@+id/tv_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="用户名"
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_marginLeft="42dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_login_phone"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_et_bottom_bg_normal"/>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_login_password"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_login_passwords" />

            <TextView
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="密码"
                android:textSize="13sp"
                android:layout_marginLeft="42dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_login_password"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_et_bottom_bg_normal"/>

        <Button
            android:id="@+id/btn_login_enter"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_login_btn_bg"
            android:text="登   录"
            android:textSize="17sp"
            android:textColor="@drawable/selector_login_tvt_bg_color"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <CheckBox
                android:id="@+id/chb_login_save_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="记住密码"
                android:background="@null"
                android:textColor="@drawable/selector_login_tv_text"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="忘记密码"
                android:background="@null"
                android:textColor="@drawable/selector_login_tv_text"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>