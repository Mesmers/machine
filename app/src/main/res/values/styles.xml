<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Style_Dialog_Button1">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:background">@drawable/selector_dialog_btn1_white_bg</item>
        <item name="android:minHeight">48.0dip</item>
    </style>

    <style name="Style_Dialog_Button2">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:background">@drawable/selector_dialog_btn2_white_bg</item>
        <item name="android:minHeight">48.0dip</item>
    </style>

    <style name="Style_Dialog_Button3">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:background">@drawable/selector_dialog_btn3_white_bg</item>
        <item name="android:minHeight">48.0dip</item>
    </style>

    <style name="main_title_text">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_textbook_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_setting_text">
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_user_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_home_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="quality_back_stracking_top_text">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@drawable/selector_quality_top_text</item>
        <item name="android:background">@drawable/selector_quality_top_back</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="quality_build_text">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="project_search_text">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="project_search_table_list_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/shape_project_search_table_list_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="order_form_manager_center_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="widget_produce_process_spec_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="widget_actual_monitor_search_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="widget_actual_monitor_search_workshop">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="widget_actual_monitor_search_machine">
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="widget_actual_monitor_process_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="cost_manager_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cost_manager_spinner_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="inventory_row_table_list_text">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/shape_project_search_table_list_text</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
